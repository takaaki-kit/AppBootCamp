<!doctype html>
<html lang="ja">
  <head>
    <title>ログインページ</title>
  </head>
  <body>
    <div class="login_form">
      <form method="POST" action="/login">
        <div class="screen_name">
          <input type="text" name="screen_name"><label><: $error_login_screen_name :></label>
